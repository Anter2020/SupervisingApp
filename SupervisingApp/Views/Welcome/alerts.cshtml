@{
    ViewBag.Title = "alerts";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

@model dynamic

<table class="w3-table">
    @*<ul class="w3-ul">*@

    <tr>
        <td><h4>Date</h4></td>
        <td><h4>Countrie</h4></td>
        <td><h4>StationID</h4></td>
        <td><h4>Text</h4></td>
        <td></td>
    </tr>
    @foreach (var alert in Model.alerts)
    {
        <form action="/welcome/markalert" method="post" >
            <input type="hidden" name="alertID" value="@alert.id" />
            <tr style="color: gold">
                <td>@alert.date</td>
                <td>@alert.countrie</td>
                <td>@alert.stationID</td>
                <td>@alert.text</td>
                @{ if (alert.state == false)
                    {
                        <td>
                            <input type="submit" name="submitbutton" class="btn btn-secondary" value="Mark as read" />
                        </td>
                    }
                    else
                    {
                        <td>
                            <input type="submit" name="submitbutton" class="btn btn-secondary" value="Mark as unread" />
                        </td>
                    }

                }
            </tr>
        </form>

    }
    @*</ul>*@
</table>
